<h1 id="link_title"><%= @link.title %></h1>
<p><%= link_to @link.url %></p>
<p><%= link_to "Edit Link", edit_link_url %></p>

<% @link.comments.each do |comment| %>
<%= render partial: 'comments/comment', locals: { comment: comment} %>
<% end %>

<h3>Add Comment</h3>

<%= render partial: 'comments/form', locals: { comment: @comment, link: @link } %>

<%= link_to "Back to Links Index", links_url %>